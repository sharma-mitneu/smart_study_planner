<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Smart Study Planner</display-name>

    <!-- CORS Filter -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.smartstudy.config.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Servlets Configuration -->
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>com.smartstudy.controller.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/api/auth/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SubjectController</servlet-name>
        <servlet-class>com.smartstudy.controller.SubjectController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubjectController</servlet-name>
        <url-pattern>/api/subjects/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TaskController</servlet-name>
        <servlet-class>com.smartstudy.controller.TaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskController</servlet-name>
        <url-pattern>/api/tasks/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProgressController</servlet-name>
        <servlet-class>com.smartstudy.controller.ProgressController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProgressController</servlet-name>
        <url-pattern>/api/progress/*</url-pattern>
    </servlet-mapping>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>
</web-app>
